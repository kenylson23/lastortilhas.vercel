{
  "version": 2,
  "buildCommand": "node scripts/build-fast-vercel.js",
  "outputDirectory": "dist/client",
  "installCommand": "npm ci",
  "functions": {
    "api/*.js": {
      "runtime": "nodejs20.x",
      "memory": 512
    }
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}