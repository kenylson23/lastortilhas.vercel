{
  "version": 2,
  "functions": {
    "api/**/*.ts": {
      "runtime": "node_18.x"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/client/$1"
    }
  ],
  "installCommand": "npm install",
  "buildCommand": "vite build",
  "outputDirectory": "dist/client",
  "env": {
    "NODE_ENV": "production"
  }
}